{
  "include": ["./src/**/*", "./stories/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": true,
    "allowJs": true,
    "removeComments": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": ".",
    "isolatedModules": true,
    "resolveJsonModule": true
  }
}
