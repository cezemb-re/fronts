{
  "name": "@cezembre/fronts",
  "author": "Lucien Perouze",
  "version": "0.1.11",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": "https://github.com/cezemb-re/fronts",
  "keywords": [
    "react",
    "fronts",
    "tools",
    "cezembre"
  ],
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build:scripts": "tsc --build",
    "build:styles": "sass ./src/style.scss ./lib/style.css && rsync -av --include='*/' --include='**/*.scss' --exclude='*' ./src/ ./lib/",
    "build": "npm run build:scripts && npm run build:styles",
    "watch": "nodemon --watch src -e ts,tsx,scss --exec 'npm run build'",
    "test": "echo 'No tests written",
    "lint": "eslint",
    "prepare": "npm run lint && npm run build",
    "release": "npm run build && release-it"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "axios": ">=0.21.1",
    "redux": ">=4.1.0",
    "react-redux": ">=7.2.4",
    "luxon": ">=1.27.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@cezembre/forms": "^1.5.6",
    "@release-it/conventional-changelog": "^3.0.1",
    "@types/axios": "^0.14.0",
    "@types/lodash": "^4.14.170",
    "@types/luxon": "^1.27.0",
    "@types/react": "^17.0.11",
    "@types/react-redux": "^7.1.16",
    "@types/sass": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.8",
    "prettier": "2.3.2",
    "release-it": "^14.10.0",
    "sass": "^1.35.1",
    "size-limit": "^5.0.1",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "resize-observer-polyfill": "^1.5.1"
  }
}
